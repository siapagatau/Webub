<% if (locals.message) { %>
  <div class="flash <%= message.type %>">
    <%= message.text %>
  </div>
<% } %>

<style>
.flash {
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 5px;
  text-align: center;
}
.flash.success { background: #d4edda; color: #155724; }
.flash.error { background: #f8d7da; color: #721c24; }
</style>